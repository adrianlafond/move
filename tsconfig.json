{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "jsx": "react",
    "jsxFactory": "h",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx", "src/ui/standard"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "files": [
    "src/custom.d.ts"
  ]
}
